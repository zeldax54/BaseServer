@section Head {

    <script src="https://cdnjs.cloudflare.com/ajax/libs/dustjs-linkedin/2.7.5/dust-full.min.js" async defer></script>
    <script src="https://platform.linkedin.com/badges/js/profile.js" async defer></script>
    <link href="~/Scripts/myCss/front.css" rel="stylesheet" type="text/css">

    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="signalr/hubs"></script>
    <script type="text/javascript">
        function uuidv4() {
            return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function (c) {
                var r = Math.random() * 16 | 0, v = c == 'x' ? r : (r & 0x3 | 0x8);
                return v.toString(16);
            });
        }
        $(function () {
            // Declare a proxy to reference the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call to broadcast messages.
            chat.client.broadcastMessage = function (name, message) {

                var liClass = 'right clearfix';
                var spanClass = 'chat-img pull-right';
                var nameClass = 'pull-right primary-font';
                var timeClass = ' text-muted';
                var imgdir = 'http://placehold.it/50/FA6F57/fff&amp;text=ME';
                if (name !== $('#displayname').val()) {
                    liClass = 'left clearfix';
                    spanClass = 'chat-img pull-left';
                    nameClass = 'primary-font';
                    timeClass = 'pull-right text-muted';
                    imgdir = 'http://placehold.it/50/55C1E7/fff&text=U';
                }
                var msj = '<li class="' + liClass + '">' +
                    '<span class="' + spanClass + '">' +
                    '<img src=' + imgdir+ ' alt="User Avatar" class="img-circle">' +
                            '</span>'+
                        '<div class="chat-body clearfix">'+
                    '<div class="header">' +
                    '<small class=" ' + timeClass + '"><span class="glyphicon glyphicon-time"></span>13 mins ago</small>' +
                    '<strong class="' + nameClass + '">'+name+'</strong>' +
                            '</div>'+
                           '<p>'+
                            message+
                               
                    '</p >'+
                    '</div>' +
                    '</li>';
              
               
                $('#chatcontainer').append(msj);              
                $("#chatbodyscrolleable").animate({ scrollTop: $('#chatbodyscrolleable ul').height() }, "fast");

            };
            // Get the user name and store it to prepend to messages.
            $('#displayname').val(uuidv4());
            // Set initial focus to message input box.
            $('#btn-input').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#btn-chat').click(function () {
                    sendMsj();
                });
                $('#btn-input').on("keypress", function (e) {
                    if (e.keyCode == 13) {
                        sendMsj();
                        return false; // prevent the button click from happening
                    }
                });


                function sendMsj() {

                    // Call the Send method on the hub.
                    chat.server.send($('#displayname').val(), $('#btn-input').val());
                    // Clear text box and reset focus for next comment.
                    $('#btn-input').val('').focus();
                }
            });
        });
    </script>


}

